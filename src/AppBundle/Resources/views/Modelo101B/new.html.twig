{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block usuario %} class="active" {% endblock %}
{% block title %}Cuentas por cobrar ext.{% endblock %}
{% block body -%}
    <h1><i class="fa fa-columns"></i>Cuentas por Cobrar en el Exterior (101B)</h1>

    <div class="box box-solid box-primary">
        <div  class="box-header">
            <h3 class="box-title col-lg-11">Adicionar Cuentas por Cobrar</h3>
            <a class="col-lg-1" href="{{ path('modelo101b') }}">
                <i class="fa fa-fw fa-reply ">Volver</i>
            </a>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form id="form_grupo" action="{{ path('modelo101b_create') }} " role="form"
              method="post" {{ form_enctype(form) }}>
            <div class="box-body">
                {{ form_errors(form) }}
                <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                {{ form_row(form.extNoVen) }}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                {{ form_row(form.ext060) }}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                {{ form_row(form.ext6190) }}
                            </div>
                        </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.extMas90) }}
                        </div>
                    </div>



                </div>

                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.extTotVe) }}
                        </div>


                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.extEfecto) }}
                        </div>


                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.litJudE) }}
                        </div>


                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.litProtE) }}
                        </div>
                    </div>

                </div>

                <div class="row">

                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.sentPentE) }}
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.tVtCrEx) }}
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_row(form.contravalor) }}
                        </div>
                    </div>

                </div>

                </div>

                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                    <a class="btn btn-default" href="{{ path('modelo101b') }}">Cancelar</a>
                </div>

                {{ form_errors(form) }}
                {{ form_widget(form._token) }}

        </form>
    </div>
{% endblock %}
