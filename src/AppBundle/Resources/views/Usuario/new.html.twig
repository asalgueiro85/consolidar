{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block usuario %} class="active" {% endblock %}
{% block title %}Usuarios{% endblock %}
{% block body -%}
    <h1><i class="fa fa-users"></i> Usuarios</h1>

    <div class="box box-solid box-primary">
        <div class="box-header">
            <h3 class="box-title">Adicionar Usuario</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        {{ form_start(form) }}
        <div class="box-body">
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-md-7">
                    <div class="form-group">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.usuario) }}
                    </div>

                    <div class="form-group">
                        {{ form_row(form.password) }}
                    </div>

                    <div class="form-group ">
                        {{ form_label(form.grupo) }}
                        {{ form_widget(form.grupo) }}
                    </div>



                    <div class="form-group">
                        {{ form_row(form.empresa) }}
                    </div>

                </div>
                <div class="col-md-5">

                    <div class="form-group">
                        {{ form_row(form.role) }}
                    </div>
                    <div class="panel">
                        <div class="box box-solid box-success">
                            <div class="box-header">
                                {{ form_widget(form.foto) }}
                            </div>
                            <div class="box-body">
                                    <img id="dir_foto" class="img-thumbnail" width="100%"
                                         src="{{ asset('uploads/images/logo/logo.png') }}" alt=""/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Aceptar</button>
                <a class="btn btn-default" href="{{ path('usuario') }}">Cancelar</a>
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}




    {% block javascripts %}
