{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block usuario %} class="active" {% endblock %}

{% block title %}Usuarios{% endblock %}
{% block body -%}
    <h1><i class="fa fa-user"></i> Usuarios</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Usuarios</h3>

                    <div class="pull-right">
                        <a href="{{ path('usuario_new') }}" class="btn  btn-xs btn-primary">Adicionar</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th  class="col-xs-1">Editar</th>
                            <th  class="col-xs-1">Eliminar</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.usuario }}</td>
                                <td> {% if entity.role == "ROLE_ADMIN" %}
                                        Administrador
                                    {% elseif entity.role == "ROLE_SUPER" %}
                                        Super Administrador
                                    {% elseif entity.role == "ROLE_CLIENTE" %}
                                        Cliente
                                    {% endif %}
                                </td>
                                <td align="center">
                                    <a href="{{ path('usuario_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                                </td>
                                <td align="center"><a id="delete" href="#" onclick='eliminar("{{ path('usuario_delete', { 'id': entity.id }) }}")'><i class="fa fa-times-circle"></i></a> </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div><!-- /.row -->


{% endblock %}

