{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block nomencladores %} active {% endblock %}
 {% block moneda %} class="active" {% endblock %}

{% block title %}Monedas{% endblock %}
{% block body -%}
    <h1><i class="fa fa-usd"></i> Moneda</h1>

    <div class="box box-solid box-primary">
        <div  class="box-header">
            <h3 class="box-title col-lg-11">Modificar Moneda</h3>
            <a class="col-lg-1" href="{{ path('moneda') }}">
                <i class="fa fa-fw fa-reply ">Volver</i>
            </a>
        </div>
        {{ form_start(edit_form) }}
        <div class="box-body">
            {{ form_errors(edit_form) }}
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            {{ form_row(edit_form.nombre) }}
                        </div>
                        <div class="col-md-6 form-group">
                            {{ form_row(edit_form.abrev) }}
                        </div>

                    </div>
                    <div class="form-group">
                        {{ form_row(edit_form.descripcion) }}
                    </div>



                </div>


            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit" class="btn btn-primary">Aceptar</button>
                <a class="btn btn-default" href="{{ path('moneda') }}">Cancelar</a>
            </div>
            {{ form_widget(edit_form._token) }}
        </div>
    </div>
{% endblock %}
