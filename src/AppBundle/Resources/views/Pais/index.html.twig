{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block nomencladores %} active {% endblock %}
 {% block pais %} class="active" {% endblock %}

{% block title %}Paises{% endblock %}
{% block body -%}
    <h1><i class="fa fa-thumb-tack"></i> País</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Paises</h3>

                    <div class="pull-right">
                        <a href="{{ path('pais_new') }}" class="btn  btn-xs btn-primary">Adicionar</a>
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Abreviatura</th>
                            <th>Descripción</th>
                            <th  class="col-xs-1 text-center">Editar</th>
                            <th  class="col-xs-1 text-center">Eliminar</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>
                                    {{ entity.nombre }}
                                </td>
                                <td>
                                    {{ entity.abrev }}
                                </td>
                                <td>
                                    {{ entity.descripcion }}
                                </td>
                                <td align="center">
                                    <a href="{{ path('pais_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i></a>
                                </td>
                                <td align="center"><a id="delete" href="#" onclick='eliminar("{{ path('pais_delete', { 'id': entity.id }) }}")'><i class="fa fa-times-circle"></i></a> </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div><!-- /.row -->


{% endblock %}
