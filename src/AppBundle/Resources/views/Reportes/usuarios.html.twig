{% extends '::front_layout.html.twig' %}

 {% block reportes %} active {% endblock %}
 {% block rusuario %} class="active" {% endblock %}

{% block title %}Listado de usuarios{% endblock %}
{% block body -%}
    <h1><i class="fa fa-circle-o"></i> Reporte Listado de Usuarios</h1>

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <form action="{{ path('imprimir_excel_usuarios') }} " role="form"
                          method="post" >
                    <h3 class="box-title">Listado de Usuarios</h3>
                            <div class="pull-right">
                                <button class="btn  btn-xs btn-primary">Imprimir</button>
                            </div>
                        </form>





                </div>
                <!-- /.box-header -->
                <div class="box-body">


                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                            <th>Empresa</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>
                                    {{ entity.name }}
                                </td>
                                <td>{{ entity.usuario }}</td>
                                <td> {% if entity.role == "ROLE_ADMIN" %}
                                        Administrador
                                    {% elseif entity.role == "ROLE_SUPER" %}
                                        Super Administrador
                                    {% elseif entity.role == "ROLE_CLIENTE" %}
                                        Cliente
                                    {% endif %}
                                </td>
                                <td>
                                    {% if entity.grupo %}
                                    {{ grupo.nombre }}
                                        {% else %}
                                    {{ entity.empresa.nombre }}
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>


                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div><!-- /.row -->


{% endblock %}
