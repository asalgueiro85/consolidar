{% extends '::front_layout.html.twig' %}

 {% block configuracion %} active {% endblock %}
 {% block usuario %} class="active" {% endblock %}
{% block title %}Grupo{% endblock %}
{% block body -%}
    <h1><i class="fa fa-users"></i> Grupo</h1>

    <div class="box box-solid box-primary">
        <div  class="box-header">
            <h3 class="box-title col-lg-11">Modificar Grupo</h3>
            <a class="col-lg-1" href="{{ path('grupo') }}">
                <i class="fa fa-fw fa-reply ">Volver</i>
            </a>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        {{ form_start(edit_form) }}
        <div class="box-body">
            {{ form_errors(edit_form) }}
                <div class="row">
                    <div class="col-md-5">

                        <div class="panel">
                            <div class="box box-solid box-success">
                                <div class="box-header">
                                    {{ form_widget(edit_form.logo) }}
                                </div>
                                <div class="box-body">

                                        {% if entity.rutalogo is empty %}
                                            <img id="dir_foto" class="img-thumbnail" width="100%"
                                                 src="{{ asset('uploads/images/logo/logo.png') }}"  alt=""/>
                                        {% else %}
                                            <img id="dir_foto" class="img-thumbnail" width="100%"
                                                 src="{{ asset('uploads/images/logo/')}}{{ entity.rutalogo }}" alt=""/>
                                        {% endif %}

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="form-group">
                            {{ form_row(edit_form.nombre) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(edit_form.codigo) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(edit_form.firma1) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(edit_form.firma2) }}
                        </div>

                    </div>
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                    <a class="btn btn-default" href="{{ path('usuario') }}">Cancelar</a>
                </div>

            {{ form_rest(edit_form) }}
            {{ form_end(edit_form) }}
            </div>
    </div>
{% endblock %}




    {% block javascripts %}
        <script>
            $("input#appbundle_grupo_logo").change(function () {
                var image = this.files[0];
                $('#dir_foto').attr("src", window.URL.createObjectURL(image));
            });
        </script>

    {% endblock %}