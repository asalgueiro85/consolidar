<!DOCTYPE html>
<html>
<head>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <title>{% block title %}Proando{% endblock %}</title>
    <!-- Bootstrap 3.3.2 -->
    <link href="{{ asset('bootstrap/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css"/>

    <!-- FontAwesome 4.3.0 -->
    <link href="{{ asset('bootstrap/plugins/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"
          type="text/css"/>

    <!-- Ionicons 2.0.0 -->
    <link href="{{ asset('bootstrap/ionicons-master/css/ionicons.min.css') }}" rel="stylesheet" type="text/css"/>

    <!-- DATA TABLES -->
    <link href="{{ asset('bootstrap/plugins/datatables/dataTables.bootstrap.css') }}" rel="stylesheet" type="text/css"/>

    <!-- Date Time CSS -->
    <link href="{{ asset('bootstrap/datetime/jquery.datetimepicker.css') }}" rel="stylesheet">

    <!-- iCheck -->
    <link href="{{ asset('bootstrap/plugins/iCheck/all.css') }}" rel="stylesheet" type="text/css"/>

    <!-- Theme style -->
    <link href="{{ asset('bootstrap/dist/css/AdminLTE.min.css') }}" rel="stylesheet" type="text/css"/>

    <!-- Daterange picker -->
    <link href="{{ asset('bootstrap/plugins/daterangepicker/daterangepicker-bs3.css') }}" rel="stylesheet" type="text/css"/>

    <!-- AdminLTE Skins. Choose a skin from the css/skins folder instead of downloading all of them to reduce the load. -->
    <link href="{{ asset('bootstrap/dist/css/skins/_all-skins.min.css') }}" rel="stylesheet" type="text/css"/>

    <!-- iCheck for checkboxes and radio inputs -->
    <link href="{{ asset('bootstrap/plugins/iCheck/all.css') }}" rel="stylesheet" type="text/css" />

    {% block stylesheets %}{% endblock %}


    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body class="skin-blue">
<div class="wrapper">

    {#  Menu superior  #}
    {% block menu_superior %}{% endblock %}

    {# Menu lateral #}
    {% block menu %}  {% endblock %}

    {#  contenido   #}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">


        <!-- Main content -->
        <section class="content">
            {% block body %}{% endblock %}

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {#<footer class="main-footer text-center bg-black">#}
        {#<strong>#}
            {#Copyright © 2015#}
        {#</strong>#}


    {#</footer>#}
    {#Modal para eliminar #}
    <div id="delete_modal" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-sm">

            <div class="alert alert-info fade in">

                <h4>Atención!</h4>

                <p>¿Está seguro que desea eliminar?</p>
                </br>
                <div class="pull-right">
                    <a class="btn btn-danger" id="confirm_dalete">Si</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>

        </div>
    </div>
    {#Modal para eliminar #}
    <div id="cambio_modal" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-sm">

            <div class="alert alert-info fade in">

                <h4>Atención!</h4>

                <p>¿Está seguro que desea confirmar el modelo?</p>
                </br>
                <div class="pull-right">
                    <a class="btn btn-danger" id="confirm_cambio">Si</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>

        </div>
    </div>
{#modal para revertir#}
    <div id="revertir_modal" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-sm">

            <div class="alert alert-info fade in">

                <h4>Atención!</h4>

                <p>¿Está seguro que desea revertir el estado del modelo?</p>
                </br>
                <div class="pull-right">
                    <a class="btn btn-danger" id="revertir_cambio">Si</a>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>

        </div>
    </div>







    <script src="{{ asset('bootmetro/js/hitua.js') }}"></script>
</div>


<!-- jQuery 2.1.3 -->
<script src="{{ asset('bootstrap/plugins/jQuery/jQuery-2.1.3.min.js') }}"></script>

{#<!-- jQuery UI 1.11.2 -->#}
<script src="{{ asset('bootstrap/jquery-ui-1.11.2/jquery-ui.min.js') }}" type="text/javascript"></script>

<!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
<script>
$.widget.bridge('uibutton', $.ui.button);
</script>

<!-- Bootstrap 3.3.2 JS -->
<script src="{{ asset('bootstrap/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>

<!-- DATA TABES SCRIPT -->
<script src="{{ asset('bootstrap/plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
<script src="{{ asset('bootstrap/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>

<!-- Date Time -->
<script src="{{ asset('bootstrap/datetime/jquery.datetimepicker.js') }}"></script>

<!-- SlimScroll -->
<script src="{{ asset('bootstrap/plugins/slimScroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>

{#<!-- iCheck -->#}
<script src="{{ asset('bootstrap/plugins/iCheck/icheck.min.js') }}" type="text/javascript"></script>

<!-- FastClick -->
<script src="{{ asset('bootstrap/plugins/fastclick/fastclick.min.js') }}"></script>

<!-- AdminLTE App -->
<script src="{{ asset('bootstrap/dist/js/app.min.js') }}" type="text/javascript"></script>

<!-- AdminLTE for demo purposes -->
<script src="{{ asset('bootstrap/dist/js/demo.js') }}" type="text/javascript"></script>

<!-- page script -->
<script type="text/javascript">
    $(function () {
        $("#example1").dataTable();
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": false,
            "bFilter": false,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false
        });
        //Timepicker
        $(".timepicker").timepicker({
            showInputs: false
        });
    });

    function eliminar($var) {
        $('#confirm_dalete').attr("href", $var);
        $('#delete_modal').modal('show');
    }
    function cambiar($var) {
        $('#confirm_cambio').attr("href", $var);
        $('#cambio_modal').modal('show');
    }
    function revertir($var) {
        $('#revertir_cambio').attr("href", $var);
        $('#revertir_modal').modal('show');
    }
    $('#appbundle_reclamacion_fecha, #appbundle_prestamo_fecha').datetimepicker({
        lang:'es',
        timepicker:false,
        format:'Y-m-d'
    });
    //Flat red color scheme for iCheck
    $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
        checkboxClass: 'icheckbox_flat-green',
        radioClass: 'iradio_flat-green'
    });
//    $('#reservation, #itsebro_clientebundle_sesion_horaInicio').datetimepicker({
//        datepicker:false,
//        format:'H:i',
//        step:5
//    });
</script>

{% block javascripts %}{% endblock %}
</body>
</html>